package com.example.problemsolvinglevel01_kotlin

fun primeNumbersInArray(arrOriginal: Array<Int>): Array<Int>
{
    val primes = mutableListOf<Int>()

    for (num in arrOriginal)
    {
        if (isPrime(num))
        {
            primes.add(num)
        }
    }
    return primes.toTypedArray()
}

fun main()
{
    val arr1Length = readPositiveNumbers("Please enter array length: ")
    val arr1 = fillArrayWithRandomNumbers(arr1Length)
    val arr2 = primeNumbersInArray(arr1)
    val arr2Length = arr2.size

    print("Original array: ")
    printArrayElements(arr1,arr1Length)

    print("Prime numbers in the array: ")
    printArrayElements(arr2, arr2Length)
}
