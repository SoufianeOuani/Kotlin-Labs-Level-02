/*
This problem is about generating keys.
example : 
KEY[1] : GSHA-LKKW-NXMZ-SASS
KEY[2] : DDSS-EWIP-CVBN-POOP
*/


fun generateWord(wordLength:Short) : String
{
    var word:String = ""
    for (i in 1..wordLength)
    {
        word+=randomCapitalLetter()
    }
    return word
}

fun generateKey(keyLength:Short): String =
    (1..keyLength).joinToString("-") { generateWord(4) }

fun generateKeys(howManyKeys: Short)
{
    for (i in 1..howManyKeys)
    {
        println("Key[$i]: ${generateKey(4)}")
    }
}

fun main() {
    println("enter how many keys to generate: ")
    val howManyKeys = readln().toShort()
    generateKeys(howManyKeys)
}
